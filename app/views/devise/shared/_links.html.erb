<div class="auth-links">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Sign in", new_session_path(resource_name), class: "auth-link" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <% if controller_name != 'sessions' %><span class="auth-links-sep">·</span><% end %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "auth-link" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <span class="auth-links-sep">·</span>
    <%= link_to "Forgot password?", new_password_path(resource_name), class: "auth-link" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <span class="auth-links-sep">·</span>
    <%= link_to "Resend confirmation", new_confirmation_path(resource_name), class: "auth-link" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <span class="auth-links-sep">·</span>
    <%= link_to "Unlock account", new_unlock_path(resource_name), class: "auth-link" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <span class="auth-links-sep">·</span>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "auth-link auth-link-button" %>
    <% end %>
  <% end %>
</div>
