<div class="auth-page">
  <div class="auth-card">
    <h2 class="auth-title">Change your password</h2>
    <p class="auth-subtitle">Enter your new password below.</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="auth-field">
        <%= f.label :password, "New password", class: "auth-label" %>
        <% if @minimum_password_length %>
          <span class="auth-hint">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "auth-input", placeholder: "••••••••" %>
      </div>

      <div class="auth-field">
        <%= f.label :password_confirmation, "Confirm new password", class: "auth-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input", placeholder: "••••••••" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "Change password", class: "auth-submit" %>
      </div>
    <% end %>

    <div class="auth-links-wrap">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
