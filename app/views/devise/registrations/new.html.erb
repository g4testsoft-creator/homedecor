<div class="auth-page">
  <div class="auth-card">
    <h2 class="auth-title">Create an account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="auth-field">
        <%= f.label :first_name, class: "auth-label" %>
        <%= f.text_field :first_name, autocomplete: "given-name", class: "auth-input", placeholder: "First name" %>
      </div>

      <div class="auth-field">
        <%= f.label :last_name, class: "auth-label" %>
        <%= f.text_field :last_name, autocomplete: "family-name", class: "auth-input", placeholder: "Last name" %>
      </div>

      <div class="auth-field">
        <%= f.label :email, class: "auth-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input", placeholder: "you@example.com" %>
      </div>

      <div class="auth-field">
        <%= f.label :password, class: "auth-label" %>
        <% if @minimum_password_length %>
          <span class="auth-hint">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "auth-input", placeholder: "••••••••" %>
      </div>

      <div class="auth-field">
        <%= f.label :password_confirmation, class: "auth-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input", placeholder: "••••••••" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "Sign up", class: "auth-submit" %>
      </div>
    <% end %>

    <div class="auth-links-wrap">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
