<div class="auth-page">
  <div class="auth-card">
    <h2 class="auth-title">Edit account</h2>
    <p class="auth-subtitle">Update your email or password.</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="auth-field">
        <%= f.label :email, class: "auth-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input", placeholder: "you@example.com" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="auth-hint">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <div class="auth-field">
        <%= f.label :password, class: "auth-label" %>
        <span class="auth-hint">Leave blank if you don’t want to change it.</span>
        <%= f.password_field :password, autocomplete: "new-password", class: "auth-input", placeholder: "••••••••" %>
        <% if @minimum_password_length %>
          <span class="auth-hint"><%= @minimum_password_length %> characters minimum</span>
        <% end %>
      </div>

      <div class="auth-field">
        <%= f.label :password_confirmation, class: "auth-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input", placeholder: "••••••••" %>
      </div>

      <div class="auth-field">
        <%= f.label :current_password, class: "auth-label" %>
        <span class="auth-hint">We need your current password to confirm changes.</span>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "auth-input", placeholder: "••••••••" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "Update account", class: "auth-submit" %>
      </div>
    <% end %>

    <div class="auth-links-wrap">
      <%= link_to "Back", :back, class: "auth-link" %>
    </div>

    <div class="auth-card auth-card-danger">
      <h3 class="auth-title" style="font-size: 1.1rem;">Cancel my account</h3>
      <p class="auth-subtitle" style="margin-bottom: 16px;">Once you cancel, your account and data cannot be recovered.</p>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "auth-submit auth-submit-danger" %>
    </div>
  </div>
</div>
