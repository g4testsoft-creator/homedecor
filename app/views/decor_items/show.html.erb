<div class="decor-show">
  <div class="decor-show-card">
    <% if @decor_item.image_url.present? %>
      <div class="decor-show-image">
        <img src="<%= @decor_item.image_url %>" alt="<%= @decor_item.name %>">
      </div>
    <% end %>

    <div class="decor-show-content">
      <h1 class="decor-show-title"><%= @decor_item.name %></h1>

      <% if @decor_item.price.present? %>
        <div class="decor-show-price">
          <%= number_to_currency(@decor_item.price) %>
        </div>
      <% end %>

      <% if @decor_item.description.present? %>
        <p class="decor-show-description">
          <%= simple_format(@decor_item.description) %>
        </p>
      <% end %>

      <div class="decor-show-meta">
        <span>Added on <%= @decor_item.created_at.to_date.to_s(:long) rescue @decor_item.created_at.to_date %></span>
      </div>

      <div class="decor-show-actions">
        <%= link_to "Back to Home", decor_items_path, class: "btn-secondary" %>
      </div>
    </div>
  </div>
</div>

<style>
  .decor-show {
    padding: 30px 0;
    display: flex;
    justify-content: center;
  }

  .decor-show-card {
    display: grid;
    grid-template-columns: minmax(0, 1.2fr) minmax(0, 1.5fr);
    gap: 32px;
    width: 100%;
    max-width: 960px;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .decor-show-image {
    background: #f7f7f7;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .decor-show-image img {
    max-width: 100%;
    max-height: 420px;
    object-fit: cover;
    border-radius: 12px;
  }

  .decor-show-content {
    padding: 24px 28px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .decor-show-title {
    margin: 0;
    font-size: 2rem;
    color: #333;
  }

  .decor-show-price {
    font-size: 1.4rem;
    font-weight: 600;
    color: #2c3e50;
  }

  .decor-show-description {
    margin: 0;
    color: #555;
    line-height: 1.6;
    white-space: pre-line;
  }

  .decor-show-meta {
    font-size: 0.9rem;
    color: #888;
  }

  .decor-show-actions {
    margin-top: auto;
  }

  .btn-secondary {
    display: inline-block;
    padding: 10px 18px;
    border-radius: 999px;
    border: 1px solid #ccc;
    background: #f8f8f8;
    color: #333;
    font-size: 0.95rem;
    text-decoration: none;
    transition: background 0.2s ease, border-color 0.2s ease, color 0.2s ease;
  }

  .btn-secondary:hover {
    background: #e9e9e9;
    border-color: #bbb;
    color: #111;
  }

  @media (max-width: 768px) {
    .decor-show-card {
      grid-template-columns: 1fr;
    }

    .decor-show-content {
      padding: 20px;
    }
  }
</style>

